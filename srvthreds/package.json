{
  "name": "srvthreds",
  "type": "module",
  "version": "1.0.0",
  "main": "dist-server/index.js",
  "scripts": {
    "start": "node ./dist-server/index.js -d",
    "start-agent": "node ./dist-server/agent/agent.js -d",
    "start-debug": "node --inspect=0.0.0.0:9229 ./dist-server/index.js -d",
    "start-debug-agent": "node --inspect=0.0.0.0:9229 ./dist-server/agent/agent.js -d",
    "start-session-agent": "node dist-server/agent/agent.js -c session_agent -i org.wt.session1 -d",
    "start-persistence-agent": "node dist-server/agent/agent.js -c persistence_agent -i org.wt.persistence1 -d",
    "start-robot-agent": "node dist-server/agent/remote-agent.js --cp run-config/robot_agent.json -i org.wt.robot1 -d",
    "check-all": "npm-run-all build-lib check test format",
    "build": "npm-run-all build-lib clean transpile copy copy-configfiles",
    "watch:dev": "nodemon",
    "transpile": "tsc --project tsconfig.prod.json",
    "check": "tsc",
    "format": "prettier --write src/",
    "copy": "copyfiles -u 1 ./src/web/* ./src/web/**/* ./dist-server",
    "copy-configfiles": "copyfiles -u 2 ./src/ts/**/config/** ./dist-server",
    "clean": "rimraf dist-server",
    "test": "npx vitest --run --bail=1 --no-file-parallelism",
    "test-changed": "npm test -- --changed",
    "generate-schemas": "cd ../thredlib ; npm run generate-event ; npm run generate-pattern",
    "build-lib": "cd ../thredlib ; npm run build-all",
    "bootstrap": "npx tsx src/ts/tools/bootstrap/bootstrap.ts",
    "cli": "npx tsx src/ts/tools/cli/cli.ts",
    "start-dev": "tsx watch ./src/ts/dev-server.ts",
    "start-dev-debug": "tsx --inspect=0.0.0.0:9229 ./src/ts/dev-server.ts",
    "start-engine-dev": "tsx watch src/ts/index.ts -d",
    "start-engine-dev-debug": "tsx --inspect=0.0.0.0:9229 ./src/ts/index.ts",
    "start-session-agent-dev": "tsx src/ts/agent/agent.ts -c session_agent -i org.wt.session1 -d",
    "start-persistence-agent-dev": "tsx src/ts/agent/agent.ts -c persistence_agent -i org.wt.persistence1 -d",
    "start-robot-agent-dev": "tsx src/ts/agent/remote-agent.ts --cp run-profiles/dev/run-config/robot_agent.json -i org.wt.robot1 -d",
    "sync-test": "npx tsx src/test/syncRunner.ts",
    "deploymentCli": "tsx deploy-containers/tools/deployment-cli/cli.ts",
    "deploy-local-databases": "npm run deploymentCli -- local s_a_dbs",
    "deploy-local-down-databases": "npm run deploymentCli -- local d_a_dbs",
    "deploy-local-services": "npm run deploymentCli -- local s_a_s",
    "deploy-local-down-services": "npm run deploymentCli -- local d_a_s",
    "deploy-local-up-all": "npm run deploymentCli -- local s_a_dbs_s",
    "deploy-local-down-all": "npm run deploymentCli -- local d_a_dbs_s"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*",
      "infrastructure"
    ],
    "ext": "ts, js, html, css",
    "ignore": [
      "**/test/**",
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js",
      "*.test.ts",
      "*.spec.ts"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm test -- --changed",
      "prettier --write src/"
    ]
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "ajv": "^8.17.1",
    "amqplib": "^0.8.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "jsonata": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.8.0",
    "nanoid": "^5.1.3",
    "node-localstorage": "^3.0.5",
    "pino": "^9.13.1",
    "pino-pretty": "^13.1.2",
    "rascal": "^20.1.1",
    "redis": "^5.5.6",
    "redlock": "^5.0.0-beta.2",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node-localstorage": "^1.3.3",
    "@types/rascal": "^10.0.9",
    "@types/yargs": "^17.0.33",
    "copyfiles": "^2.4.1",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.0",
    "typedoc": "^0.28.7",
    "typescript": "^5.5.4",
    "vitest": "^2.1.1"
  },
  "private": true,
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.4"
  }
}

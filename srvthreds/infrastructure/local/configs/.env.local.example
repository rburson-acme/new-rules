# JWT Configuration
JWT_SECRET=
JWT_EXPIRE_TIME=1h
REFRESH_TOKEN_SECRET=
REFRESH_TOKEN_EXPIRE_TIME=7d

# Database Configuration
# MongoDB connection settings
MONGO_HOST=localhost:27017
# For single-node replica sets (local development), set to true
# For multi-node replica sets (production), set to false
MONGO_DIRECT_CONNECTION=true

# Cache and Storage Configuration
REDIS_HOST=localhost:6379

# Message Queue Configuration
RABBITMQ_HOST=localhost

# ============================================================================
# Environment-specific Examples
# ============================================================================

# Local Development (Docker containers with port forwarding)
# - Databases run in containers
# - Application runs on host machine
# - Use: localhost with default ports
#
# MONGO_HOST=localhost:27017
# REDIS_HOST=localhost:6379
# RABBITMQ_HOST=localhost
# MONGO_DIRECT_CONNECTION=true

# Docker Compose (All services in containers)
# - Everything runs in Docker
# - Use container service names
#
# MONGO_HOST=mongo-repl-1:27017
# REDIS_HOST=redis:6379
# RABBITMQ_HOST=rabbitmq
# MONGO_DIRECT_CONNECTION=true  # If using single-node MongoDB

# Kubernetes/Minikube
# - Services accessed via k8s service names
# - Configuration typically via ConfigMaps/Secrets
#
# MONGO_HOST=mongodb-service:27017
# REDIS_HOST=redis-service:6379
# RABBITMQ_HOST=rabbitmq-service
# MONGO_DIRECT_CONNECTION=false  # For replica set deployments

# CI/CD Pipelines
# - Services may use different hostnames
# - Often configured via pipeline environment variables
# - Tests should have fallback defaults

{
    "meta": {
        "active": true
    },
    "name": "Async Test Pattern",
    "id": "async_test",
    "description": "Test pattern for validating client synchronization by storing and retrieving sequence IDs asynchronously",
    "reactions": [
        {
            "name": "save_seqId",
            "description": "Handles incoming sequence events, persistence responses, and finish requests in a loop until finish is requested",
            "condition": {
                "type": "or",
                "description": "Routes events based on type: new sequence IDs to save, persistence confirmations to acknowledge, or finish requests to retrieve results",
                "operands": [
                    {
                        "type": "filter",
                        "description": "Handles new sequence ID events by saving them to persistence and storing correlation data",
                        "xpr": "$event.type = 'org.async.event' and $valueNamed('action') = 'seq'",
                        "transform": {
                            "eventDataTemplate": {
                                "title": "Sync Event Detected",
                                "content": {
                                    "tasks": [
                                        {
                                            "name": "save_sync_data",
                                            "options": {
                                                "dbname": "test"
                                            },
                                            "op": "upsert",
                                            "params": {
                                                "type": "SyncObject",
                                                "matcher": {
                                                    "id": "$xpr( $thredId )"
                                                },
                                                "values": {
                                                    "$push": {
                                                        "seqIds": "$xpr( $valueNamed('seqId') )"
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        },
                        "transition": {
                            "name": "save_seqIdE"
                        },
                        "publish": {
                            "name": "save_sync",
                            "to": "org.wt.persistence",
                            "onPublish": {
                                "xpr": "$setLocal($outboundEvent.id & '_data', { 'sourceId': $event.source.id, 'seqId': $valueNamed('seqId') })"
                            }
                        }
                    },
                    {
                        "type": "filter",
                        "description": "Handles persistence confirmations by notifying the original requester that their sequence ID was saved",
                        "xpr": "$event.type = 'org.wt.persistence'",
                        "transform": {
                            "eventDataTemplate": {
                                "title": "Sequence Stored",
                                "description": "Sequence ID stored successfully",
                                "content": {
                                    "values": {
                                        "seqId": "$xpr( $local($event.re & '_data').seqId )"
                                    }
                                }
                            }
                        },
                        "transition": {
                            "name": "save_seqId"
                        },
                        "publish": {
                            "to": [
                                "$xpr( $local($event.re & '_data').sourceId )"
                            ]
                        }
                    },
                    {
                        "type": "filter",
                        "description": "Handles finish requests by retrieving all stored sequence IDs from persistence",
                        "xpr": "$event.type = 'org.async.event' and $valueNamed('action') = 'finish'",
                        "onTrue": {
                            "xpr": "$setLocal('fin_req_data', { 'sourceId': $event.source.id })"
                        },
                        "transform": {
                            "eventDataTemplate": {
                                "title": "Getting Sync Data",
                                "content": {
                                    "tasks": [
                                        {
                                            "name": "get_sync_data",
                                            "options": {
                                                "dbname": "test"
                                            },
                                            "op": "get",
                                            "params": {
                                                "type": "SyncObject",
                                                "matcher": {
                                                    "id": "$xpr( $thredId )"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        },
                        "publish": {
                            "name": "finish_sync",
                            "to": "org.wt.persistence"
                        },
                        "transition": {
                            "name": "send_results"
                        }
                    }
                ]
            }
        },
        {
            "name": "send_results",
            "description": "Returns the collected sequence IDs to the requesting participant and forwards to cleanup",
            "condition": {
                "type": "filter",
                "xpr": "$event.type = 'org.wt.persistence'",
                "transform": {
                    "eventDataTemplate": {
                        "title": "Final Test Results",
                        "content": {
                            "values": {
                                "seqIds": "$xpr( $valueNamed('seqIds') )"
                            }
                        }
                    }
                },
                "publish": {
                    "to": [
                        "$xpr( $local('fin_req_data').sourceId )"
                    ]
                },
                "transition": {
                    "name": "cleanup",
                    "input": "forward"
                }
            }
        },
        {
            "name": "cleanup",
            "description": "Deletes the test sync data from persistence to clean up after the test",
            "condition": {
                "type": "filter",
                "xpr": "true",
                "transform": {
                    "eventDataTemplate": {
                        "title": "Cleanup Test Data",
                        "content": {
                            "tasks": [
                                {
                                    "name": "delete_sync_data",
                                    "options": {
                                        "dbname": "test"
                                    },
                                    "op": "delete",
                                    "params": {
                                        "type": "SyncObject",
                                        "matcher": {
                                            "id": "$xpr( $thredId )"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                },
                "publish": {
                    "to": "org.wt.persistence"
                },
                "transition": {
                    "name": "$next"
                }
            }
        },
        {
            "name": "wait_cleanup_response",
            "description": "Waits for persistence confirmation that cleanup completed before terminating the thred",
            "condition": {
                "type": "filter",
                "xpr": "$event.type = 'org.wt.persistence'",
                "transition": {
                    "name": "$terminate"
                }
            }
        }
    ]
}
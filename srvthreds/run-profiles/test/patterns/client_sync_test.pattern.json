{
    "meta": {
        "active": true
    },
    "name": "Sync Test Pattern",
    "id": "sync_test",
    "description": "Test pattern for validating client synchronization by storing and retrieving sequence IDs",
    "reactions": [
        {
            "name": "save_seqId",
            "description": "Handles sync events - either saves a sequence ID to persistence or initiates data retrieval on finish",
            "condition": {
                "type": "or",
                "operands": [
                    {
                        "type": "filter",
                        "xpr": "$event.type = 'org.sync.event' and $valueNamed('action') = 'seq'",
                        "onTrue": {
                            "xpr": "$setLocal('req_data', { 'sourceId': $event.source.id, 'seqId': $valueNamed('seqId') })"
                        },
                        "transform": {
                            "eventDataTemplate": {
                                "title": "Sync Event Detected",
                                "content": {
                                    "tasks": [
                                        {
                                            "name": "save_sync_data",
                                            "options": {
                                                "dbname": "test"
                                            },
                                            "op": "upsert",
                                            "params": {
                                                "type": "SyncObject",
                                                "matcher": {
                                                    "id": "$xpr( $thredId )"
                                                },
                                                "values": {
                                                    "$push": {
                                                        "seqIds": "$xpr( $valueNamed('seqId') )"
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        },
                        "transition": {
                            "name": "notify_participant"
                        },
                        "publish": {
                            "to": "org.wt.persistence",
                            "onPublish": {
                                "xpr": "$setLocal('saveSeqOutId', $event.id)"
                            }
                        }
                    },
                    {
                        "type": "filter",
                        "xpr": "$event.type = 'org.sync.event' and $valueNamed('action') = 'finish'",
                        "transform": {
                            "eventDataTemplate": {
                                "title": "Getting Sync Data",
                                "content": {
                                    "tasks": [
                                        {
                                            "name": "get_sync_data",
                                            "options": {
                                                "dbname": "test"
                                            },
                                            "op": "get",
                                            "params": {
                                                "type": "SyncObject",
                                                "matcher": {
                                                    "id": "$xpr( $thredId )"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        },
                        "publish": {
                            "to": "org.wt.persistence",
                            "onPublish": {
                                "xpr": "$setLocal('finishOutId', $event.id)"
                            }
                        },
                        "transition": {
                            "name": "send_results"
                        }
                    }
                ]
            }
        },
        {
            "name": "notify_participant",
            "description": "Notifies the requesting participant that a sequence ID was stored successfully",
            "condition": {
                "type": "filter",
                "xpr": "$event.type = 'org.wt.persistence' and $event.re = $local('saveSeqOutId')",
                "transform": {
                    "eventDataTemplate": {
                        "title": "Sequence Stored",
                        "description": "Sequence ID stored successfully",
                        "content": {
                            "values": {
                                "seqId": "$xpr( $local('req_data').seqId )"
                            }
                        }
                    }
                },
                "transition": {
                    "name": "save_seqId"
                },
                "publish": {
                    "to": [
                        "$xpr( $local('req_data').sourceId )"
                    ]
                }
            }
        },
        {
            "name": "send_results",
            "description": "Returns the collected sequence IDs to the requesting participant and forwards to cleanup",
            "condition": {
                "type": "filter",
                "xpr": "$event.type = 'org.wt.persistence' and $event.re = $local('finishOutId')",
                "transform": {
                    "eventDataTemplate": {
                        "title": "Final Test Results",
                        "content": {
                            "values": {
                                "seqIds": "$xpr( $valueNamed('seqIds') )"
                            }
                        }
                    }
                },
                "publish": {
                    "to": [
                        "$xpr( $local('req_data').sourceId )"
                    ]
                },
                "transition": {
                    "name": "cleanup",
                    "input": "forward"
                }
            }
        },
        {
            "name": "cleanup",
            "description": "Deletes the test sync data from persistence to clean up after the test",
            "condition": {
                "type": "filter",
                "xpr": "true",
                "transform": {
                    "eventDataTemplate": {
                        "title": "Cleanup Test Data",
                        "content": {
                            "tasks": [
                                {
                                    "name": "delete_sync_data",
                                    "options": {
                                        "dbname": "test"
                                    },
                                    "op": "delete",
                                    "params": {
                                        "type": "SyncObject",
                                        "matcher": {
                                            "id": "$xpr( $thredId )"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                },
                "publish": {
                    "to": "org.wt.persistence"
                },
                "transition": {
                    "name": "$next"
                }
            }
        },
        {
            "name": "wait_cleanup_response",
            "description": "Waits for persistence confirmation that cleanup completed before terminating the thred",
            "condition": {
                "type": "filter",
                "xpr": "$event.type = 'org.wt.persistence'",
                "transition": {
                    "name": "$terminate"
                }
            }
        }
    ]
}
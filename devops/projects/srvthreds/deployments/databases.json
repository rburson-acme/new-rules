{
  "deployments": [
    {
      "name": "Start Databases",
      "shortName": "s_a_dbs",
      "description": "Starts the database containers (Mongo, Redis, RabbitMQ).",
      "environments": [
        "development",
        "minikube"
      ],
      "target": {
        "type": "docker-compose",
        "deployCommand": "up",
        "composeFile": "docker-compose-db.yml",
        "defaultArgs": "-d --wait"
      }
    },
    {
      "name": "Stop Databases",
      "shortName": "d_a_dbs",
      "description": "Stops and removes the database containers and their volumes.",
      "environments": [
        "development",
        "minikube"
      ],
      "target": {
        "deployCommand": "down",
        "composeFile": "docker-compose-db.yml",
        "defaultArgs": "-v"
      }
    }
  ]
}

{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workbookName": {
      "type": "string",
      "metadata": {
        "description": "Name of the workbook resource (must be a GUID)"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for the workbook"
      }
    },
    "displayName": {
      "type": "string",
      "metadata": {
        "description": "Display name for the workbook"
      }
    },
    "serializedData": {
      "type": "string",
      "metadata": {
        "description": "Serialized JSON for the workbook content"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Insights/workbooks",
      "apiVersion": "2022-04-01",
      "name": "[parameters('workbookName')]",
      "location": "[parameters('location')]",
      "kind": "shared",
      "properties": {
        "displayName": "[parameters('displayName')]",
        "category": "workbook",
        "version": "1.0",
        "sourceId": "[subscription().id]",
        "serializedData": "[parameters('serializedData')]"
      }
    }
  ]
}